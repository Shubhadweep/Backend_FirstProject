<%- include('../Includes/header.ejs') %>
<link rel="stylesheet" href="/CSS/userProductDetails.css">
</head>

<body>
    <%- include('../Includes/navbar.ejs') %>
 <main>
    <section>
        <div class="container py-5">
            <h2 class="text-center mb-3 text-light">Product Details</h2>
            <div class="card mb-3 mx-5">
                <div class="row g-0">
                    <div class="col-md-4 bg-light text-center py-5">
                        <img src="../../Images/userAllProdCardBg.webp" class="img-fluid rounded-start" alt="Product Image">
                    </div>
                    <div class="col-md-8 bg-warning-subtle">
                        <div class="card-body p-5">
                            <h5 class="card-title"><%= data.product_Name%></h5>
                            <p class="card-text">Product Price: Rs. <%= data.product_Price%></p>
                            <p class="card-text">Product Colour: <%= data.product_Color%></p>
                            <p class="card-text">Product Description: <%= data.product_Company%></p>
                            <button type="button" class="btn btn-success">Order Now</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>  
 </main>

<%- include('../Includes/footer.ejs') %>